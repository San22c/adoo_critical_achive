<h1>Comentarios</h1>

<table>
  <thead>
    <tr>
      <th>User id=references</th>
      <th>Item id=references</th>
      <th>Comentario txt=string</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comentarios.each do |comentario| %>
      <tr>
        <td><%= comentario.user_id=references %></td>
        <td><%= comentario.item_id=references %></td>
        <td><%= comentario.comentario_txt=String %></td>
        <td><%= link_to 'Show', comentario %></td>
        <td><%= link_to 'Edit', edit_comentario_path(comentario) %></td>
        <td><%= link_to 'Destroy', comentario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

