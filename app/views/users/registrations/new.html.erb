<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>


  <div class="field">
    <%= f.label :Nombre %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "Nombre" %>
  </div>
  <div class="field">
    <%= f.label :Apellidos %><br />
    <%= f.text_field :lastname, autofocus: true, autocomplete: "Apellidos" %>
  </div>
  <div class="field">
    <%= f.label :Edad %><br />
    <%= f.number_field :age, autofocus: true, autocomplete: "Edad" %>
  </div>
  <div class="field">
    <%= f.label :Email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "Email" %>
  </div>

  <div class="field">
    <%= f.label :Contraseña_nueva %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "Contraseña nueva" %>
  </div>

  <div class="field">
    <%= f.label :Confirmar_contraseña %><br />
    <%= f.password_field :password_confirmation, autocomplete: "Confirmar contraseña" %>
  </div>

  <div class="field">
    <% f.text_field :rol, autofocus: true, autocomplete: "Email", :value => 'N' %>
  </div>

  <div class="actions">
    <%= f.submit "Registrarse" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
